---
import { ClientRouter } from "astro:transitions";

import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Hans Henrik Grønsleth's personal website" } =
  Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <ClientRouter />
  </head>
  <body class="min-h-screen bg-white dark:bg-gray-900">
    <header class="border-b border-gray-200 dark:border-gray-800">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a
            href="/"
            class="text-xl font-semibold text-gray-900 dark:text-white"
            >Hans Henrik Grønsleth</a
          >
          <div class="space-x-6">
            <a
              href="/gigs"
              class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
              >Gigs</a
            >
            <a
              href="/recordings"
              class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
              >Recordings</a
            >
            <a
              href="/software"
              class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
              >Software</a
            >
          </div>
        </div>
      </nav>
    </header>
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="border-t border-gray-200 dark:border-gray-800">
      <div
        class="container mx-auto px-4 py-6 text-center text-gray-600 dark:text-gray-400"
      >
        <p>© {new Date().getFullYear()} Hans Henrik Grønsleth</p>
      </div>
    </footer>
  </body>
</html>
