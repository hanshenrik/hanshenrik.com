---
import Layout from "../layouts/Layout.astro";
---

<Layout title="hanshenrik.com">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-16">
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Musician and software developer based in Norway, creating experiences
        through code and sound.
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-3">
      <a href="/gigs" class="card group">
        <div class="card-content">
          <h2 class="mb-2">Gigs</h2>
          <p class="text-gray-600">Upcoming performances and live events</p>
        </div>
      </a>

      <a href="/recordings" class="card group">
        <div class="card-content">
          <h2 class="mb-2">Recordings</h2>
          <p class="text-gray-600">Music releases and collaborations</p>
        </div>
      </a>

      <a href="/software" class="card group">
        <div class="card-content">
          <h2 class="mb-2">Software</h2>
          <p class="text-gray-600">Projects and web development</p>
        </div>
      </a>
    </div>
  </div>
</Layout>
