---
import Layout from "../layouts/Layout.astro";
import gigs from "../data/gigs.json";
---

<Layout title="Upcoming Gigs">
  <h1 class="text-3xl font-bold mb-8">Upcoming Gigs</h1>
  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    {
      gigs.map((gig) => (
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
          <div class="p-6">
            <h2 class="text-xl font-semibold mb-2">{gig.artist}</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-4">{gig.venue}</p>
            <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
              <time datetime={gig.date}>{gig.date}</time>
              <span class="mx-2">â€¢</span>
              <span>{gig.time}</span>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</Layout>

