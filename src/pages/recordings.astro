---
import Layout from "../layouts/Layout.astro";
import recordings from "../data/recordings.json";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
---

<Layout title="Recordings">
  <div class="max-w-7xl mx-auto">
    <h1 class="mb-12">Recordings</h1>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        recordings.map((recording) => (
          <div class="card group">
            {recording.image && (
              <div class="relative aspect-square overflow-hidden">
                <Image
                  src={recording.image}
                  width={400}
                  height={400}
                  quality={100}
                  alt={`${recording.artist} - ${recording.name}`}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
              </div>
            )}
            <div class="card-content">
              <h2 class="mb-1">{recording.name}</h2>
              <p class="text-gray-600  mb-3">{recording.artist}</p>
              <p class="text-sm text-gray-500  mb-4 line-clamp-2">
                {recording.description}
              </p>
              <div class="flex flex-wrap gap-3">
                {recording.youtubeLink && (
                  <a
                    href={recording.youtubeLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 px-3 py-1.5 text-sm bg-red-100 text-red-700  rounded-full hover:bg-red-200 transition-colors duration-200"
                  >
                    <Icon name="arcticons:youtube" />
                    <span>YouTube</span>
                  </a>
                )}
                {recording.spotifyLink && (
                  <a
                    href={recording.spotifyLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 px-3 py-1.5 text-sm bg-green-100 text-green-700  rounded-full hover:bg-green-200 transition-colors duration-200"
                  >
                    <Icon name="arcticons:spotify" />
                    <span>Spotify</span>
                  </a>
                )}
                {recording.appleLink && (
                  <a
                    href={recording.appleLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 px-3 py-1.5 text-sm bg-pink-100 text-pink-700  rounded-full hover:bg-pink-200 transition-colors duration-200"
                  >
                    <Icon name="arcticons:apple" />
                    <span>Apple Music</span>
                  </a>
                )}
                {recording.tidalLink && (
                  <a
                    href={recording.tidalLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 px-3 py-1.5 text-sm bg-blue-100 text-blue-700  rounded-full hover:bg-blue-200  transition-colors duration-200"
                  >
                    <Icon name="arcticons:tidal" />
                    <span>Tidal</span>
                  </a>
                )}
                {recording.soundcloudLink && (
                  <a
                    href={recording.soundcloudLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 px-3 py-1.5 text-sm bg-orange-100 text-orange-700 rounded-full hover:bg-orange-200  transition-colors duration-200"
                  >
                    <Icon name="arcticons:soundcloud" />
                    <span>SoundCloud</span>
                  </a>
                )}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
