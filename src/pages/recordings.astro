---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import recordings from "../data/recordings.json";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Recordings">
  <div class="mx-auto max-w-7xl">
    <h1 class="mb-12">Recordings</h1>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        recordings.map((recording) => (
          <div class="card group">
            {recording.image && (
              <div class="relative aspect-square overflow-hidden">
                <Image
                  src={recording.image}
                  width={400}
                  height={400}
                  quality={100}
                  alt={`${recording.artist} - ${recording.name}`}
                  class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                />
              </div>
            )}
            <div class="card-content">
              <h2 class="mb-1">{recording.name}</h2>
              <p class="mb-3 text-gray-600">{recording.artist}</p>
              <p class="mb-4 line-clamp-2 text-sm text-gray-500">
                {recording.description}
              </p>
              <div class="flex flex-wrap gap-3">
                {recording.youtubeLink && (
                  <a
                    href={recording.youtubeLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 rounded-full bg-red-100 px-3 py-1.5 text-sm text-red-700 transition-colors duration-200 hover:bg-red-200"
                  >
                    <Icon name="arcticons:youtube" />
                    <span>YouTube</span>
                  </a>
                )}
                {recording.spotifyLink && (
                  <a
                    href={recording.spotifyLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 rounded-full bg-green-100 px-3 py-1.5 text-sm text-green-700 transition-colors duration-200 hover:bg-green-200"
                  >
                    <Icon name="arcticons:spotify" />
                    <span>Spotify</span>
                  </a>
                )}
                {recording.appleLink && (
                  <a
                    href={recording.appleLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 rounded-full bg-pink-100 px-3 py-1.5 text-sm text-pink-700 transition-colors duration-200 hover:bg-pink-200"
                  >
                    <Icon name="arcticons:apple" />
                    <span>Apple Music</span>
                  </a>
                )}
                {recording.tidalLink && (
                  <a
                    href={recording.tidalLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 rounded-full bg-blue-100 px-3 py-1.5 text-sm text-blue-700 transition-colors duration-200 hover:bg-blue-200"
                  >
                    <Icon name="arcticons:tidal" />
                    <span>Tidal</span>
                  </a>
                )}
                {recording.soundcloudLink && (
                  <a
                    href={recording.soundcloudLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 rounded-full bg-orange-100 px-3 py-1.5 text-sm text-orange-700 transition-colors duration-200 hover:bg-orange-200"
                  >
                    <Icon name="arcticons:soundcloud" />
                    <span>SoundCloud</span>
                  </a>
                )}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
