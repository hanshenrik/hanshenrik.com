---
import Layout from "../layouts/Layout.astro";
import softwares from "../data/softwares.json";
import { Picture } from 'astro:assets';

// Import all images
import mandaljazz from "../assets/images/mandaljazz.png";
import ronsenrock from "../assets/images/ronsenrock.png";
import rishatt from "../assets/images/rishatt.png";
import jazzkart from "../assets/images/jazzkart.png";
import kickmap from "../assets/images/kickmap.png";
import whenfm from "../assets/images/when-fm.png";
import kjorromskip from "../assets/images/kjorromskip.png";
import eliaseine from "../assets/images/eliaseine.png";
import hakonhammer from "../assets/images/hakonhammer.png";

const imageMap = {
  "mandaljazz.png": mandaljazz,
  "ronsenrock.png": ronsenrock,
  "rishatt.png": rishatt,
  "jazzkart.png": jazzkart,
  "kickmap.png": kickmap,
  "when-fm.png": whenfm,
  "kjorromskip.png": kjorromskip,
  "eliaseine.png": eliaseine,
  "hakonhammer.png": hakonhammer,
};
---

<Layout title="Software Projects">
  <div class="max-w-7xl mx-auto">
    <h1 class="mb-12">Software Projects</h1>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        softwares.map((software) => (
          <div class="card group">
            {software.image && (
              <div class="relative aspect-video overflow-hidden">
                <!-- `alt` is mandatory on the Picture component -->
                <Picture formats={['avif', 'webp']} 
                  src={imageMap[software.image]}
                  // width={500}
                  // height={500}
                  quality={100}
                  alt={software.name}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
              </div>
            )}
            <div class="card-content">
              <h2 class="mb-2">{software.name}</h2>
              <p class="text-gray-600 dark:text-gray-400 mb-4">
                {software.description}
              </p>
              <div class="flex flex-wrap gap-3">
                {software.url && (
                  <a
                    href={software.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-3 py-1.5 text-sm bg-blue-100 text-blue-700 dark:bg-blue-900 dark:text-blue-300 rounded-full hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors duration-200"
                  >
                    <svg
                      class="w-4 h-4 mr-1.5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                      />
                    </svg>
                    Visit Site
                  </a>
                )}
                {software.githubUrl && (
                  <a
                    href={software.githubUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-3 py-1.5 text-sm bg-gray-100 text-gray-700 dark:bg-gray-900 dark:text-gray-300 rounded-full hover:bg-gray-200 dark:hover:bg-gray-800 transition-colors duration-200"
                  >
                    <svg
                      class="w-4 h-4 mr-1.5"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                    >
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                    </svg>
                    GitHub
                  </a>
                )}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
