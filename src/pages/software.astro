---
import { Icon } from "astro-icon/components";
import { Picture } from "astro:assets";
import Layout from "../layouts/Layout.astro";

import softwares from "../data/softwares.json";

import eliaseine from "../assets/images/eliaseine.png";
import hakonhammer from "../assets/images/hakonhammer.png";
import jazzkart from "../assets/images/jazzkart.png";
import kickmap from "../assets/images/kickmap.png";
import kjorromskip from "../assets/images/kjorromskip.png";
import mandaljazz from "../assets/images/mandaljazz.png";
import rishatt from "../assets/images/rishatt.png";
import ronsenrock from "../assets/images/ronsenrock.png";
import whenfm from "../assets/images/when-fm.png";

const imageMap: Record<string, ImageMetadata> = {
  Mandaljazz: mandaljazz,
  RønsenROCK: ronsenrock,
  "rishatt.no": rishatt,
  Jazzkart: jazzkart,
  kickmap: kickmap,
  "when.fm": whenfm,
  "Kjør Romskip": kjorromskip,
  "Elias Eine": eliaseine,
  "Håkon Hammer": hakonhammer,
};
---

<Layout title="Software">
  <div class="mx-auto max-w-7xl space-y-8">
    <h1 class="mb-12">Software</h1>
    <p>
      I currently work at <a
        href="https://www.folq.no"
        target="_blank"
        rel="noopener noreferrer">Folq</a
      >. Below are some of my personal projects.
    </p>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        softwares.map((software) => (
          <div class="card group space-y-2">
            <div class="relative aspect-video overflow-hidden">
              {software.url ? (
                <a
                  href={software.url}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Picture
                    formats={["avif", "webp"]}
                    src={imageMap[software.name]}
                    quality={100}
                    alt={software.name}
                    class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
                  />
                </a>
              ) : (
                <Picture
                  formats={["avif", "webp"]}
                  src={imageMap[software.name]}
                  quality={100}
                  alt={software.name}
                  class="h-full w-full object-cover"
                />
              )}
            </div>
            <div class="card-content">
              <h2 class="mb-2">{software.name}</h2>
              <p class="mb-4 text-gray-600">{software.description}</p>
              <div class="flex flex-wrap gap-3">
                {software.url && (
                  <a
                    href={software.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 rounded-full bg-blue-100 px-3 py-1.5 text-sm text-blue-700 transition-colors duration-200 hover:bg-blue-200"
                  >
                    <Icon name="arcticons:emoji-globe-with-meridians" />
                    Visit Site
                  </a>
                )}
                {software.githubUrl && (
                  <a
                    href={software.githubUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 rounded-full bg-gray-100 px-3 py-1.5 text-sm text-gray-700 transition-colors duration-200 hover:bg-gray-200"
                  >
                    <Icon name="arcticons:github" />
                    GitHub
                  </a>
                )}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
